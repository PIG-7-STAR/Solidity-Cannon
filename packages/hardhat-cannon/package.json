    "bn.js": "^5.2.0",
    "hardhat": "^2.8.4",
    "mocha": "^9.2.0",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "hardhat": "^2.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^3.0.0",
